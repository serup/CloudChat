cd ../../../../codeblocks_projects/serup/websocket_server/bin/Debug/
./scanvaserver.exe 0.0.0.0 7777 &  echo $! > /var/scanva/runningServerProcessID
sleep 10
cd -
cd ../../../../codeblocks_projects/serup/DFDFunctions/1_1/bin/Debug/
